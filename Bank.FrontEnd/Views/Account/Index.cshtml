@model IEnumerable<Bank.DAL.Models.Account>
@*@using Bank.FrontEnd.ViewModels*@
@{
    ViewData["Title"] = "Index";
}


<h1>Index</h1> 

@if (User.Identity.IsAuthenticated)
{
    <p>
        <button type="button" class="btn btn-success" asp-action="Create">Maak een nieuwe account aan></button>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdentityHolder.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountLock)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountBalance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountMinimum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountType)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdentityHolder.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountLock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountBalance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountMinimum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountType)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (!User.Identity.IsAuthenticated)
{
    <h2>U dient in te loggen om uw accounts te kunnen bekijken. </h2>
    <br />
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
